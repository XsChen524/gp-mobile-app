{
	"env": {
		"browser": true,
		"es2021": true,
		"react-native/react-native": true
	},
	"extends": ["eslint:recommended", "plugin:react/recommended"],
	"overrides": [],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"plugins": ["react", "react-native"],
	"rules": {
		"indent": ["warn", "tab"],
		"semi": [2, "always"]
	},
	"settings": {
		"react": {
			"version": "detect"
		}
	}
}
